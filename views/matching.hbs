    <section>

        <div class="container">
            <div class="row mt-5">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body text-center">
                            {{#if isMatched}}
                            {{#if match.myAlbum}}
                            <div class="row">
                                <div class="col-6 offset-3">
                                    <div class="mt-1 imgAlbum">
                                        <div class="mainimg">

                                            <div class="avatar-upload">
                                                <div class="avatar-preview">
                                                    <div id="imagePreview"
                                                        style="background-image: url({{match.myAlbum.[0]}});">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{#each match.myAlbum}}
                                        <a class="d-inline"><img src="{{this}}" class="slideImg" alt="album"
                                                style="height:95px; width:95px"></a>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            {{else}}
                            <div class="avatar-upload">
                                <div class="avatar-preview">
                                    <div id="imagePreview"
                                        style="background-image: url({{match.Profile.Profile1.photo}});">
                                    </div>
                                </div>
                            </div>

                            {{/if}}
                            {{else}}
                            <div class="avatar-upload">
                                <div class="avatar-preview">
                                    <div id="imagePreview"
                                        style="background-image: url({{match.Profile.Profile1.photo}});">
                                    </div>
                                </div>
                            </div>
                            {{/if}}
                            <h4 class="card-title mt-4">{{match.Profile.Profile1.name.firstname}}
                                {{match.Profile.Profile1.name.lastname}},{{match.Profile.Profile2.age}}</h4>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{match.Profile.Profile1.location.city}},{{match.Profile.Profile1.location.country}}
                            </h6>
                            <p class="card-text">{{match.Profile.Profile3.AboutYourself}} </p>
                            {{#if isMatched}}
                            <a class="btn btn-outline-dark " href="./home">Message</a>
                            {{else}}
                            {{#if sent}}
                            <a class="btn btn-success  text-white">Sent</a>

                            {{else}}
                            <input type="hidden" value="{{match._id}}">
                            <a class="btn btn-wine connect text-white">Connect</a>
                            {{/if}}

                            {{/if}}

                        </div>
                        <hr class="ml-3 mr-3 main">
                        <div class="col-md-12">
                            <div class="row mx-3">
                                <h6>Contact Details</h6>
                            </div>
                            <div class="row mt-4 mx-3">
                                <div class="col-md-1">
                                    <label for="number"><i class="fa fa-phone"></i> :</label>
                                </div>
                                {{#if isMatched}}
                                <div class="col md-3">
                                    <p>{{match.Signup.mobile}}</p>
                                </div>
                                <div class="col-md-1">
                                    <label for="number"><i class="fa fa-envelope"></i> :</label>
                                </div>
                                <div class="col md-3">
                                    <p>{{match.Signup.email}}</p>
                                </div>

                                {{else sent}}
                                <div class="col md-3">
                                    <p>98XXXXXXXX</p>
                                </div>
                                <div class="col-md-1">
                                    <label for="number"><i class="fa fa-envelope"></i> :</label>
                                </div>
                                <div class="col md-3">
                                    <p>XXXXXXX@gmail.com</p>
                                </div>
                                <div class="col"><span class="btn btn-success mb-4 text-white">Request Sent</span>
                                </div>
                                {{else}}
                                <div class="col md-3">
                                    <p>98XXXXXXXX</p>
                                </div>
                                <div class="col-md-1">
                                    <label for="number"><i class="fa fa-envelope"></i> :</label>
                                </div>
                                <div class="col md-3">
                                    <p>XXXXXXX@gmail.com</p>
                                </div>
                                <input type="hidden" value="{{match._id}}">
                                <div class="col"><span class="btn btn-wine connect mb-4 text-white">Connect for
                                        details</span>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                        <hr class="ml-3 mr-3 main">

